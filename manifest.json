{
  "manifest_version": 2,
  "name": "Picture In Picture",
  "version": "0.1",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "logo.png",
    "default_title": "Picture In Picture"
  },
  "permissions": ["activeTab", "declarativeContent"]
}
